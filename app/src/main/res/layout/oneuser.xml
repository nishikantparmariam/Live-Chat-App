<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/belowborderforonuser">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/oneuserpp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/oneuserfn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/oneuserpp"
        android:layout_alignBottom="@+id/oneuserpp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="21dp"
        android:layout_toEndOf="@+id/oneuserpp"
        android:layout_toRightOf="@+id/oneuserpp"
        android:text="Username"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/oneuserpoints"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/oneuserfn"
        android:layout_alignBottom="@+id/oneuserpp"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/oneuserpp"
        android:layout_toRightOf="@+id/oneuserpp"
        android:text="45 Points"
        android:textColor="#777"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/oneuserstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#fff"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="1dp"
        android:text="online"
        android:textStyle="bold"
        android:background="@drawable/greenbg"/>
</RelativeLayout>