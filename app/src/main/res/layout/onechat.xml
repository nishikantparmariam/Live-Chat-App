<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/belowborderforonuser">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/onechatpp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/onechatn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/onechatpp"
        android:layout_alignBottom="@+id/onechatpp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="21dp"
        android:layout_toEndOf="@+id/onechatpp"
        android:layout_toRightOf="@+id/onechatpp"
        android:text="Username"
        android:textColor="#111111"
        android:textSize="18sp" />
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/greenbg"
        android:id="@+id/useronline"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="35dp"
        android:elevation="2dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/onechatlastmessage"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/onechatn"
        android:layout_alignBottom="@+id/onechatpp"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/onechatpp"
        android:layout_toRightOf="@+id/onechatpp"
        android:text="45 dsfPoint"
        android:textColor="#777"
        android:maxLines="1"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/onechattime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#888"
        android:layout_marginTop="8dp"

        android:text="4:05 PM"
        />
    <TextView
        android:id="@+id/onechatunseen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/onechattime"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="20dp"
        android:textColor="#fff"
        android:textSize="11sp"
        android:paddingTop="2dp"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:paddingBottom="2dp"
        android:text="10"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:background="@drawable/greenbg"/>
</RelativeLayout>