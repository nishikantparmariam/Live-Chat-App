<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="25dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingRight="55dp"
        android:paddingLeft="10dp"
        android:id="@+id/msg_textview"
        android:textColor="#000000"
        android:textSize="15sp"
        android:maxWidth="300dp"
        android:background="@drawable/msgleftbg"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/time_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/msg_textview"
        android:layout_toRightOf="@+id/msg_textview"
        android:layout_toEndOf="@+id/msg_textview"
        android:textSize="12sp"
        android:layout_marginLeft="-50dp"
        android:layout_marginBottom="6dp"
        android:textColor="#999"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seen_"
        android:textColor="#888"
        android:layout_below="@+id/msg_textview"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:visibility="gone"
        />
</RelativeLayout>